
{% schema %}
{
	"name": "wolldecke",
	"settings": [
		
		{
			"type":"header",
			"content":"Produktdetails",
			"info":"In this block you can set the Produktdetails"
		},
		{
			"type":"textarea",
			"id":"wolldecke-textbloc-1",
			"label":"wolldecke Text bloc 1"
		},


		{
			"type":"header",
			"content":"Lieferung & Versand",
			"info":"In this block you can set the Lieferung & Versand content."
		},
		{
			"type":"textarea",
			"id":"wolldecke-textbloc-2",
			"label":"wolldecke Text bloc 2"
		},
        {
			"type":"header",
			"content":"SecondText",
			"info":"In this block you can set the content for the second block."
		},
		{
			"type":"textarea",
			"id":"wolldecke-textbloc-3",
			"label":"wolldecke Text bloc 3"
		},
